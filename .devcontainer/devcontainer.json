{
  "name": "corunacc",
  "build": {
    "dockerfile": "../containers/corunacc.Dockerfile",
    "context": ".."
  },
  "runArgs": [
    /*
      I've set up gpus for docker, and I highly recommend it:
      having a GPU makes a big difference to simulation speed!

      https://stackoverflow.com/q/25185405 <- if you have a GPU
      if you can't, then you should comment this line out:
    */
    "--gpus=all"
  ],
  "workspaceMount": "source=${localWorkspaceFolder}/src/corunacc/tb/,target=/corundum/fpga/app/dma_bench/tb/corunacc,type=bind",
  "workspaceFolder": "/corundum",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-vscode.makefile-tools",
        "ms-vscode.cpptools",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "ms-vscode.cmake-tools",
        "eirikpre.systemverilog",
        "formulahendry.code-runner"
      ]
    }
  }
}
