{
  "name": "siftcal",
  "build": {
    "dockerfile": "../containers/siftcal.Dockerfile",
    "context": ".."
  },
  "runArgs": [
    /*
      I've set up gpus for docker, and I highly recommend it:
      having a GPU makes a big difference to simulation speed!

      https://stackoverflow.com/q/25185405 <- if you have a GPU
      if you can't, then you should comment this line out:
    */
    "--gpus=all",
    // it needs networking capabilities for the TAP stuff
    "--cap-add=NET_RAW",
    "--cap-add=NET_ADMIN",
    // the tun device needs to be carried over into the containers
    "--device=/dev/net/tun:/dev/net/tun"
  ],
  "workspaceMount": "source=${localWorkspaceFolder}/src/tb/,target=/siftcal/tb/testbed/,type=bind",
  "workspaceFolder": "/siftcal",
  "mounts": [
    {  // add vscode config files to container, for devcontainer
      "type": "bind",
      "source": "${localWorkspaceFolder}/containers/configs/siftcal/.vscode/",
      "target": "/siftcal/.vscode/"
    },
    {  // add vscode config files to container, for devcontainer
      "type": "bind",
      "source": "${localWorkspaceFolder}/src/tap/py/",
      "target": "/siftcal/pyutils/tapaz/"
    }
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-vscode.makefile-tools",
        "ms-vscode.cpptools",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "ms-vscode.cmake-tools",
        "eirikpre.systemverilog",
        "formulahendry.code-runner"
      ]
    }
  }
}
